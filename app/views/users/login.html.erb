<% content_for :stylesheet, (stylesheet_link_tag "users") %>

<% if session[:user_id] == nil %>
  <% content_for :title, "Login" %>
  <div class="banner">
    <a href="login" class="button">Log In</a>
    <a href="signup" class="button">Sign Up</a>
  </div>
  <h3> Login </h3>
  <% if flash[:notice] %>
   <p class = "error"><%= flash[:notice] %></p>
  <% end %>
  <%= form_tag("post_login", :method => "post") do %>
      <%= label_tag(nil, "Username") %>
      <%= text_field_tag(:username, @username) %>
      <%= label_tag(nil, "Password") %>
      <%= password_field_tag(:password) %>
      <%= submit_tag("Log In", :class => "button") %>
  <% end %>

<% else %>
  <% content_for :title, "Already Logged In" %>
  <p> Yoooo! You have already logged in. Why do you want to log in again? Please log out first. </p>
  <div id="doge"> <%= image_tag("doge.png", :alt => "doge",
    :class => "doge") %> </div>
<% end %>

