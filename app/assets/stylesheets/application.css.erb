  color: #777777;
  font-size: 14px;
}

div.header {
  color: white;
  -webkit-animation: blurFadeIn 3s ease-in backwards;
  -moz-animation: blurFadeIn 3s ease-in backwards;
  -ms-animation: blurFadeIn 3s ease-in backwards;
  animation: blurFadeIn 3s ease-in backwards;
}

#header_txt {
  font: 120px Trajan;
  text-shadow: 6px 6px #333333;
  -webkit-animation-delay: 0s;
  -moz-animation-delay: 0s;
  -ms-animation-delay: 0s;
  animation-delay: 0s;
}

#author_txt {
  font: 60px Trajan;
  text-shadow: 3px 3px #333333;
  -webkit-animation-delay: 3s;
  -moz-animation-delay: 3s;
  -ms-animation-delay: 3s;
  animation-delay: 3s;
}

#walker:hover {
  cursor: pointer;
}

img.doge:hover {
  content: url(<%= asset_path("doge-rotate.gif") %>);
  cursor: pointer;
}

img.doge {
  -webkit-animation-name: shake;
  -webkit-animation-duration: 0.8s;
  -webkit-transform-origin:50% 50%;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: linear;
}

#doge {
  -webkit-animation: blurFadeIn 3s ease-in backwards;
  -moz-animation: blurFadeIn 3s ease-in backwards;
  -ms-animation: blurFadeIn 3s ease-in backwards;
  animation: blurFadeIn 3s ease-in backwards;
}

p {
  font: 16px Montserrat;
  line-height: 27px;
  text-align: justify;
}

input[type=password], input[type=text] {
  font: 18px Montserrat;
  padding: .5em .6em;
  display: inline-block;
  border: 1px solid #ccc;
  box-shadow: inset 0 1px 3px #ddd;
  margin-bottom: 10px;
  border-radius: 4px;
  vertical-align: middle;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

label {
  display: block;
  margin-bottom: 10px;
}

h3 {
  display: block;
  font-size: 1.17em;
  -webkit-margin-before: 1em;
  -webkit-margin-after: 1em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  font: 22px Montserrat;
  font-weight: bold;
}


#walker {
  position: fixed;
  white-space: nowrap;
  z-index: 999;
}

#cat {
  position: absolute;
  bottom: -30px;
  left: 20px;
}

#section {
  position: relative;
  text-align: left;
  background: #efefef;
  width: 700px;
  margin: auto;
  max-width: 250%;
  min-width: 50%;
  border: 15px solid #A7D7F9;
  border-radius: 25px;
  margin-top: 30px;
  padding: 10px 25px 80px 25px;
  box-shadow: 10px 10px 5px grey;
}

#bg_pokemon_holder:hover {
  cursor: pointer;
}

#bg_pokemon_holder {
  position: fixed;
  white-space: nowrap;
  left: 20px;
  bottom: 20px;
  width: 300px;
}

#bg_pokemon {
  width: 100%;
}

.button {
  color: black;
  background: #A7D7F9;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  display: inline-block;
  zoom: 1;
  line-height: normal;
  white-space: nowrap;
  vertical-align: middle;
  text-align: center;
  cursor: pointer;
  -webkit-user-drag: none;
  -webkit-user-select: none;
  box-sizing: border-box;
  text-decoration: none;
  border-radius: 4px;
  font: 18px Montserrat;
  font-weight: bold;
  padding: .5em 1em;
}

form .button {
  margin-top: 15px;
  display: block;
}

form {
  font: 18px Montserrat;
}

.button:hover {
  color: black;
  background: -webkit-linear-gradient(#A7D7F9, #97C7E9); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#A7D7F9, #97C7E9); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#A7D7F9, #97C7E9); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#A7D7F9, #97C7E9); /* Standard syntax */
}

a.button:hover {
  color: black;
}

body {
  background-image: url(<%= asset_path("background.jpg") %>);
  text-align: center;
}

/*
 * Animations Beyond this point.
 */

@-webkit-keyframes blurFadeIn{
  0%{
    opacity: 0;
    text-shadow: 0px 0px 40px #fff;
    -webkit-transform: scale(1.5);
  }
  50%{
    opacity: 0.5;
    text-shadow: 0px 0px 10px #fff;
    -webkit-transform: scale(1.1);
  }
  100%{
    opacity: 1;
    text-shadow: 0px 0px 1px #fff;
    -webkit-transform: scale(1);
  }
}

@-moz-keyframes blurFadeIn{
  0%{
    opacity: 0;
    text-shadow: 0px 0px 40px #fff;
    -moz-transform: scale(1.5);
  }
  100%{
    opacity: 1;
    text-shadow: 0px 0px 1px #fff;
    -moz-transform: scale(1);
  }
}

@keyframes blurFadeIn{
  0%{
    opacity: 0;
    text-shadow: 0px 0px 40px #fff;
    transform: scale(1.5);
  }
  50%{
    opacity: 0.5;
    text-shadow: 0px 0px 10px #fff;
    transform: scale(1.1);
  }
  100%{
    opacity: 1;
    text-shadow: 0px 0px 1px #fff;
    transform: scale(1);
  }
}

@-webkit-keyframes shake {
  0% { -webkit-transform: translate(2px, 1px) rotate(0deg); }
  10% { -webkit-transform: translate(-1px, -2px) rotate(-1deg); }
  20% { -webkit-transform: translate(-3px, 0px) rotate(1deg); }
  30% { -webkit-transform: translate(0px, 2px) rotate(0deg); }
  40% { -webkit-transform: translate(1px, -1px) rotate(1deg); }
  50% { -webkit-transform: translate(-1px, 2px) rotate(-1deg); }
  60% { -webkit-transform: translate(-3px, 1px) rotate(0deg); }
  70% { -webkit-transform: translate(2px, 1px) rotate(-1deg); }
  80% { -webkit-transform: translate(-1px, -1px) rotate(1deg); }
  90% { -webkit-transform: translate(2px, 2px) rotate(0deg); }
  100% { -webkit-transform: translate(1px, -2px) rotate(-1deg); }
}